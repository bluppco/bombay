---
// IMPORTING ATOMS
import H2 from "../../atoms/H2.astro"

// Destructuring props from the Astro context
const {

    title,
    src,
    alt,
    sub_title,
    text,
    href

} = Astro.props
---
<div>
    <!-- Heading 2 with a link -->
    <H2 href={ href }>{ title }</H2>
    <div>
        <!-- Image container with specific dimensions and aspect ratio -->
        <div class="w-full aspect-[3/2] py-4">
            <img
                src={ src }
                alt={ alt }
                class="w-full h-full object-cover"
            />
        </div>
        <!-- Bottom border and title below the image -->
        <div class="border-b border-black pb-3 w-24">
            <p class="font-inconsolata italic">{ sub_title }</p>
        </div>
    </div>
    <!-- Additional content below the image -->
    <div class="py-10">
        <p class="font-inconsolata text-lg">{ text }</p>
    </div>
</div>