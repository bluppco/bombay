---
// IMPORTING LAYOUTS
import Layout from "../layouts/Layout.astro"
import Container from "../layouts/Container.astro"

// IMPORTING COMPONENTS
import Header from "../components/header/Header.astro"
import Blog from "../components/blog/Blog.astro"
import Footer from "../components/Footer.astro"
---
<!-- Using the imported 'Layout' component as the outer container -->
<Layout>
	<!-- Using the 'Container' layout to structure the content -->
	<Container>
		<!-- Using the imported 'Header' component to include the header section -->
		<Header />
		<!-- Blog Section -->
		<Blog />
	</Container>
	<Footer />
</Layout>
